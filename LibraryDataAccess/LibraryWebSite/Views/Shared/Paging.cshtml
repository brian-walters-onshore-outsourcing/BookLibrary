
@{
    int PageNumber = ViewBag.PageNumber;
    int PageSize = ViewBag.PageSize;
    int TotalCount = ViewBag.TotalCount;
    int TotalPageButtonCount = ((0 == TotalCount % PageSize) ? 0 : 1) + TotalCount / PageSize;
    int ActualButtonCount = (10 < TotalPageButtonCount) ? 10 : TotalPageButtonCount;
    int number =  TotalPageButtonCount - ActualButtonCount ;

}
<p>
    Items Per Page:
    @Html.ActionLink(" -1- ", "page", new { page = 1, count = 1 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -2- ", "page", new { page = 1, count = 2 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -3- ", "page", new { page = 1, count = 3 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -4- ", "page", new { page = 1, count = 4 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -5- ", "page", new { page = 1, count = 5 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -10- ", "page", new { page = 1, count = 10 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -20- ", "page", new { page = 1, count = 20 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -30- ", "page", new { page = 1, count = 30 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -40- ", "page", new { page = 1, count = 40 })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink(" -50- ", "page", new { page = 0, count = 50 })

</p>
<p>
    @{
        for (int i = 1; i <= ActualButtonCount; i++)
        {
            string classstring = (i == PageNumber) ? "btn btn-sm btn-success glyphicon glyphicon-star-empty" : "btn btn-sm btn-normal glyphicon glyphicon-asterisk";
            @Html.ActionLink($"-Page {i}-", "Page", new { page = i, count = PageSize }, new { @class = classstring });

        }
        if (ActualButtonCount != TotalPageButtonCount)
        {
            <text> @number Buttons Truncated</text>
        }
    }
</p>


