@using LibraryWebSite.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top col-md-12">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Hide.UnlessInTheRole("List:Author"))
                    {
                        <li>@Html.ActionLink("Authors", "Index", "Author")</li>
                    }
                    @if (Hide.UnlessInTheRole("List:Book"))
                    {
                        <li>@Html.ActionLink("Books", "Index", "Book")</li>
                    }
                    @if (Hide.UnlessInTheRole("List:Borrower"))
                    {
                        <li>@Html.ActionLink("Borrowers", "Index", "Borrower")</li>
                    }
                    @if (Hide.UnlessInTheRole("List:Genre"))
                    {
                        <li>@Html.ActionLink("Genres", "Index", "Genre")</li>
                    }
                    @if (Hide.UnlessInTheRole("List:Author"))
                    {
                        <li>@Html.ActionLink("Roles", "Index", "Role")</li>
                    }
                    @if (Hide.UnlessInTheRole("List:ThisUserBorrowing"))
                    {
                        <li>@Html.ActionLink("My Borrowed Books", "MyBorrowedBooks", "Book")</li>
                    }
                    @if (Hide.UnlessInTheRole("List:AllUserBorrowing"))
                    {
                        <li>@Html.ActionLink("All Borrowed Books", "AllBorrowedBooks", "Book")</li>
                    }
                    @if (Hide.UnlessInTheRole("View:Reporting"))
                    {
                        <li>@Html.ActionLink("Reports", "index", "Reporting")</li>
                    }

                    <li>@Html.ActionLink("View Exceptions", "index", "Exception")</li>


                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated && !Authentication.isHashed())
                    {
                        <li>@Html.ActionLink("Hash my Cleartext Password", "HashAccount", "Home")</li>
                    }
                    @{Html.RenderPartial("LoginRegisterPartial"); }
                </ul>
            </div>
        </div>
    </div>
 
      

    <div class="container body-content">
        <p>.</p><p>.</p><p>.</p><p>.</p>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
