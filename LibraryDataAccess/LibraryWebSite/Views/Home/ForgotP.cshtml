@model LibraryWebSite.Models.RegistrationViewModel

@{
    ViewBag.Title = "ForgotU";
}

<h2>ForgotU</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RegistrationViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   
    <p>Enter your Username, and if we can find it in our database we will send you a reset link to the email address we have on file.</p>
    <div class="form-group">
        <div class="control-label col-md-2">
            <p>User Name</p>
        </div>
        
        <div class="col-md-10">
            @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
        </div>
    </div>

   

 

 

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send Link" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>
