@model IEnumerable<LibraryWebSite.Models.VMBorrowing>

@{
    ViewBag.Title = "Book Borrowings";
}

<h2>Book Borrowings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
       
       
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
       
        
        
        <th>
            @Html.DisplayNameFor(model => model.BorrowerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BorrowerEMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BorrowerDOB)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isCheckedOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysLeft)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.BookName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        
        
       
        <td>
            @Html.DisplayFor(modelItem => item.BorrowerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BorrowerEMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BorrowerDOB)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReturnedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isCheckedOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaysLeft)
        </td>
        <td>
            
             @Html.ActionLink("Force Return", "ForceReturn", new { id = item.BorrowingID }) 
             @Html.ActionLink("Delete History", "DeleteHistory", new { id = item.BorrowingID }) 

        </td>
    </tr>
}

</table>
